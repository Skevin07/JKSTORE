@model IEnumerable<TiendaJK.Models.Cliente>

@{
    ViewData["Title"] = "Listado de Clientes";
}

<h1>Listado de clientes</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Nuevo Cliente <i class="bi bi-person-plus"></i></a>
</p>

<div class="table-responsive">
    <table class="table table-bordered border-primary">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                <th>@Html.DisplayNameFor(model => model.DUI)</th>
                <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                <th>@Html.DisplayNameFor(model => model.Correo)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                    <td>@Html.DisplayFor(modelItem => item.DUI)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                    <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                    <td>
                        <a class="btn btn-info" href="@Url.Action("Details", new { id = item.Id })">Detalles <i class="bi bi-arrows-angle-expand"></i></a>
                        <a class="btn btn-warning" href="@Url.Action("Edit", new { id = item.Id })">Editar <i class="bi bi-pencil"></i></a>
                        <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.Id })">Eliminar <i class="bi bi-person-dash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>