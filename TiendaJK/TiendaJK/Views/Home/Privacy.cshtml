<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
   
</head>
<body>
    

    <div class="container">

        <!--TARJETAS-->
        <div class="cardBox">
            <div class="card">
                <div>
                    <div class="numbers">1,042</div>
                    <div class="cardName">Visitas de hoy</div>
                </div>
                <div class="iconBox">
                    <i class="bi bi-eye"></i>

                </div>


            </div>

            <div class="card">
                <div>
                    <div class="numbers">80</div>
                    <div class="cardName">Ventas realizadas</div>
                </div>
                <div class="iconBox">
                    <i class="bi bi-cart2"></i>

                </div>


            </div>

            <div class="card">
                <div>
                    <div class="numbers">207</div>
                    <div class="cardName">Comentarios</div>
                </div>
                <div class="iconBox">
                    <i class="bi bi-chat-square-text"></i>

                </div>


            </div>

            <div class="card">
                <div>
                    <div class="numbers">$6,047</div>
                    <div class="cardName">Ganancias</div>
                </div>
                <div class="iconBox">
                    <i class="bi bi-cash-coin"></i>

                </div>
            </div>
        </div>




        <!--AGREGANDO LOS GRAFICOS-->

        <div class="graphBox">
            <div class="box">
                <canvas id="myChart"></canvas>
            </div>
            <div class="box">
                <canvas id="earning"></canvas>
            </div>
        </div>






        <!--CREACION DE LOS DOS PANELES DE LOS DETALLES-->

        <div class="details">
            <div class="recentOrders">
                <div class="carHeader">
                    <h2>Ordenes recientes</h2>
                    <a href="#" class="btn">Vista general</a>
                </div>

                <table>
                    <thead>
                        <tr>
                            <td>Nombre</td>
                            <td>Precio</td>
                            <td>Estado de pago</td>
                            <td>Estado</td>

                        </tr>
                    </thead>

                    <tbody>

                        <tr>
                            <td>PC</td>
                            <td>$1000</td>
                            <td>Pagado</td>
