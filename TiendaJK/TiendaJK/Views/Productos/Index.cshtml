@model IEnumerable<TiendaJK.Models.Producto>

@{
    ViewData["Title"] = "Listado de Productos";
}

<h1>Lista de Productos</h1>

<p>
    <a class="btn btn-success" a asp-action="Create">Nuevo Producto <i class="bi bi-bag-plus-fill"></i></a>
</p>
<table class="table table-bordered border-primary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                    <a class="btn btn-info" href="@Url.Action("Details", new {  id=item.Id  })">Detalles <i class="bi bi-arrows-angle-expand"></i></a>
                    <a class="btn btn-warning" href="@Url.Action("Edit", new {  id=item.Id  })">Editar <i class="bi bi-pencil"></i></a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", new {  id=item.Id  })">Eliminar <i class="bi bi-trash3-fill"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
