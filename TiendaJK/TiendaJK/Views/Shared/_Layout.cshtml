<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TiendaJK</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header class="custom-header">
        <div class="header-logo">
            <i class="bi bi-laptop"></i> TiendaJK
        </div>
        <nav class="custom-navbar">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
            <a class="nav-link" asp-area="" asp-controller="Clientes" asp-action="Index">Registro Cliente</a>
            <a class="nav-link" asp-area="" asp-controller="Productos" asp-action="Index">Registro Producto</a>
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Dashboard</a>

            
            <a class="nav-link" asp-area="" asp-controller="Carrito" asp-action="Index">
                <i class="bi bi-cart"></i>
                @if (ViewBag.CarritoCount != null)
                {
                    <span class="badge bg-danger">@ViewBag.CarritoCount</span>
                }
            </a>

            
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-eye"></i>
                @if (ViewData["VisitaConteo"] != null)
                {
                    <span class="badge bg-info">@ViewData["VisitaConteo"]</span>
                }
            </a>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
