@model TiendaJK.ViewModel.UsuarioVM

@{
    ViewData["Title"] = "Registro";
}

<h1 style="text-align: center;">Registra una cuenta con nosotros!</h1>
<hr />

<!--Creacion de tabla-->
<div class="row mt-5 justify-content-center">
    <div class="col-sm-4">
        <div class="card">
            <div class="card-header">
                Registro
            </div>
            <div class="card-body">

                <form asp-controller="Usuario" asp-action="Create" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group">

                        <input asp-for="NombreCompleto" class="form-control mb-3" type="text" placeholder="Nombre Completo" />
                        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                    </div>

                    <div class="form-group">

                        <input asp-for="Correo" class="form-control mb-3" type="text" placeholder="Correo" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="form-group">

                        <input asp-for="Clave" class="form-control mb-3" type="text" placeholder="Clave" />
                        <span asp-validation-for="Clave" class="text-danger"></span>
                    </div>


                    <div class="form-group">

                        <input asp-for="ConfirmarClave" class="form-control mb-3" type="text" placeholder="Confirmar clave" />
                        <span asp-validation-for="ConfirmarClave" class="text-danger"></span>
                    </div>




                    <!--Boton para registrar un usuario-->
                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-primary"> Registrar</button>
                    </div>



                    @if (ViewData["Mensaje"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["Mensaje"]
                        </div>
                    }

                    ¿Ya tienes una cuenta?<a asp-controller="Usuario" asp-action="Login"> Iniciar Sesion</a>


                </form>


            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}